{
  "extends": ["airbnb", "eslint:recommended",
    "plugin:react/recommended"],
    
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    // Add any custom rules here
    "semi": ["error", "always"],
    "import/rule-name": "error",
    "node/rule-name": "error",
    "promise/rule-name": "error",
    "react/jsx-uses-react": "error"
  },
  "plugins": ["import", "node", "promise", "react"]
}


